{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["react", "jest"],
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2019", "dom", "dom.iterable"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
  },
  "typeRoots": ["./types"],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "**/*.test.*"]
}
